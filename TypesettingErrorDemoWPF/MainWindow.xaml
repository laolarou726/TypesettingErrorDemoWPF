            Text="TEXT 一二 TEXT 三四 TEXT 一二三四五六七八九十零"
            TextWrapping="Wrap"/>
        <Grid Background="Gray"
              Width="150"
              Height="150">
            <TextBlock
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Text="&#xEB5A;"
                FontSize="140"
                FontFamily="/Assets/SegoeIcons.ttf#Segoe Fluent Icons"/>
            <TextBlock
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Text="&#xEB5B;"
                FontSize="140"
                FontFamily="/Assets/SegoeIcons.ttf#Segoe Fluent Icons"/>
