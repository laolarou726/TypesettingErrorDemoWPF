              Width="150"
              Height="150"
              TextElement.Foreground="Red">
            <TextBlock
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Text="&#xF83D;"
                FontSize="140"
                FontFamily="/Assets/SegoeIcons.ttf#Segoe Fluent Icons"/>
            <TextBlock
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Text="&#xF83F;"
                FontSize="140"
                FontFamily="/Assets/SegoeIcons.ttf#Segoe Fluent Icons"/>
        </Grid>
        <Grid Background="Gray"
              Width="150"
              Height="150">
            <TextBlock
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Text="&#xF8CC;"
                FontSize="140"
                FontFamily="/Assets/SegoeIcons.ttf#Segoe Fluent Icons"/>
